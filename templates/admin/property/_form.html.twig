{{ form_start(form) }}
<div class="row mt-4">
    <div class="col-md-4">{{ form_row(form.title) }}</div>
    <div class="col-md-4">{{ form_row(form.surface) }}</div>
    <div class="col-md-4">{{ form_row(form.price) }}</div>
</div>
<div class="row">
    <div class="col-md-3">{{ form_row(form.rooms) }}</div>
    <div class="col-md-3">{{ form_row(form.bedrooms) }}</div>
    <div class="col-md-3">{{ form_row(form.heat) }}</div>
    <div class="col-md-3">{{ form_row(form.floor) }}</div>
</div>
<div class="row">
    <div class="col">{{ form_row(form.pictureFiles) }}</div>
</div>
<div class="row flex">
    {% for picture in property.pictures %}
        <div class="col" style="width: 110px; flex: none; margin: 5px;">
            <img src="{{ vich_uploader_asset(picture, 'imageFile') | imagine_filter('thumb') }}" width="110" alt="Photo du bien">
            <a href="{{ path('admin.picture.delete', {id: picture.id}) }}" class="btn btn-danger" data-delete data-token="{{ csrf_token('delete' ~ picture.id) }}">Supprimer</a>
        </div>
    {% endfor %}
</div>
<div class="row mt-2">
    <div class="col">{{ form_row(form.description) }}</div>
</div>
<div class="row">
    <div class="col-md-7">{{ form_row(form.address) }}</div>
    <div class="col-md-3">{{ form_row(form.city) }}</div>
    <div class="col-md-2">{{ form_row(form.postal_code) }}</div>
</div>
<div class="row">
    <div class="col">{{ form_row(form.selections) }}</div>
</div>
<div class="row">
    <div class="col-md-auto mt-auto">{{ form_row(form.sold) }}</div>
</div>
<button class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}